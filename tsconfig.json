{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "esnext",
    "rootDir": ".",
    "outDir": "./dist/out-tsc",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["jasmine", "node", "jasminewd2"],
    "lib": ["es2018", "esnext.array", "esnext.asynciterable", "dom"],
    "paths": {
      "@alfresco/adf-content-services": ["libs/content-services"],
      "@alfresco/adf-core": ["libs/core"],
      "@alfresco/adf-core/*": ["libs/core/*/public-api.ts"],
      "@alfresco/adf-extensions": ["libs/extensions"],
      "@alfresco/adf-insights": ["libs/insights"],
      "@alfresco/adf-process-services": ["libs/process-services"],
      "@alfresco/adf-process-services-cloud": ["libs/process-services-cloud"],
      "@alfresco/adf-testing": ["libs/testing"],
      "@alfresco/js-api": ["node_modules/@alfresco/js-api"]
    }
  },
  "exclude": [
    "libs/config",
    "integration",
    "scripts",
    "assets",
    "tools",
    "node_modules"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  }
}
